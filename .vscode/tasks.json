{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "install",
			"type": "process",
			"command": "npm",
			"options": {
				"cwd": "${fileDirname}/..",
				"env": {
					"ENVIRONMENT_VAR": "VALUE"
				}
			},
			"echoCommand": true,
			"detail": "description of the install task",
			"args": [
				"install"
			],
			"presentation": {
				"reveal": "always"
			}
		},
		{
			"label": "platform specific config",
			"type": "process",
			"icon": {
				"id": "checklist"
			},
			"windows": {
				"label": "windows label overrides its parent",
				"command": "npm.exe",
				"args": [
					"run",
					"build"
				]
			},
			"linux": {
				"command": "npm",
				"description":"a bit less verbose on linux ",
				"echoCommand": false,
				"dependsOn": "install",
				"dependsOrder": "sequence",
				"args": [
					"run",
					"build"
				]
			}
		}
	]
}